<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-success bg-success">
        <div class="container">
            <a class="navbar-brand text-white" href="#">URL Shortener</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Simplify Your Links</h1>
            <p class="lead">Shorten your URLs quickly and effortlessly with our URL shortener.</p>
        </div>
    </header>

    <!-- URL Shortening Form -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h4 class="card-title text-center mb-4">Shorten Your URL</h4>
                            <form method="post" action="/">
                                <div class="mb-3">
                                    <label for="url" class="form-label">Enter your URL</label>
                                    <input type="url" class="form-control" name="url" placeholder="https://example.com"
                                        required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Shorten URL</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% if (locals.urls) { %>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Previously Shortened URLs</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Sr. No.</th>
                            <th scope="col">Original URL</th>
                            <th scope="col">Shortened URL</th>
                            <th scope="col">Visit History</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url,index)=> { %>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= url.redirectUrl %>
                                </td>
                                <td><a href="http://localhost:3000/<%= url.shortUrl %>" target="_blank">
                                        <%= url.shortUrl %>
                                    </a></td>
                                <td>
                                    <%= url.analyticUrl.length %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <% } %>

            <!-- Features Section -->
            <section id="features" class="bg-light py-5">
                <div class="container">
                    <h2 class="text-center mb-4">Features</h2>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <i class="bi bi-lightning-fill text-primary display-4"></i>
                            <h5 class="mt-3">Fast and Reliable</h5>
                            <p>Shorten your URLs in seconds with lightning-fast performance.</p>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-lock-fill text-primary display-4"></i>
                            <h5 class="mt-3">Secure</h5>
                            <p>We ensure that your data and links are kept safe and secure.</p>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-bar-chart-fill text-primary display-4"></i>
                            <h5 class="mt-3">Analytics</h5>
                            <p>Track your shortened links with detailed analytics.</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Footer -->
            <footer class="bg-dark text-white text-center py-3">
                <div class="container">
                    <p class="mb-0">Â© 2025 URL Shortener. All rights reserved.</p>
                </div>
            </footer>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>